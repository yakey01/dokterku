# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=dokterku_testing
# DB_USERNAME=root
# DB_PASSWORD=test_password

# Cache & Session Configuration (Array driver for testing)
BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Redis Configuration (for integration tests)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Array driver for testing)
MAIL_MAILER=array
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=test
MAIL_PASSWORD=test
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="test@dokterkuklinik.com"

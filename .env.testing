# Application
APP_NAME="Dokterku Healthcare System (Testing)"
APP_ENV=testing
APP_KEY=base64:testing-key-for-automated-tests
APP_DEBUG=true
APP_URL=http://localhost:8000

# Logging
LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (In-memory SQLite for fast testing)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
DB_FOREIGN_KEYS=true


# Disable Mail in Tests
MAIL_MAILER=array

# Disable File Storage in Tests
FILESYSTEM_DISK=local

# Testing Log Configuration
LOG_CHANNEL=single
LOG_LEVEL=debug

# Disable External Services in Tests
TELEGRAM_BOT_TOKEN=test_token
TELEGRAM_ADMIN_CHAT_ID=test_chat_id

# Clinic Settings for Testing
APP_CLINIC_LATITUDE=-6.2088
APP_CLINIC_LONGITUDE=106.8456
APP_CLINIC_RADIUS=100

# Testing Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US